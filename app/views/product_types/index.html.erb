<p id="notice"><%= notice %></p>

<h1>Product Types</h1>

<table>
  <thead>
    <tr>
      <th>Product Type</th>
      <th>Unit</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_type.each do |product_type| %>
      <tr>
        <td><%= product_type.product_type %></td>
        <td><%= product_type.unit %></td>


        <td><%= link_to 'Edit',  edit_product_type_path(product_type) %></td>
        <td><%= link_to 'Delete', product_type_path(product_type), method: :delete, data: { confirm: 'Are you sure you want to delete?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

